{
  "name": "cs-4241-a4-creative-coding",
  "version": "0.1.0",
  "description": "WPI CS4241 fourth assignment",
  "author": "Kent Libby (klibby@wpi.edu)",
  "scripts": {
    "start-dev": "npm-run-all --parallel lint start",
    "start": "npm-run-all browser-babel-ify run-server",
    "browser-babel-ify": "browserify public/scripts/main.js -o public/bundle.js -t [ babelify --presets [@babel/preset-env] ]",
    "run-server": "node server.js",
    "lint": "eslint \"**/*.js\" --ignore-pattern node_modules/ --ignore-pattern public/bundle.js",
    "test": "node -r esm jasmineTestRunner.js"
  },
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "babelify": "^10.0.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5",
    "postprocessing": "^6.7.0",
    "serve-favicon": "^2.5.0",
    "three": "^0.108.0"
  },
  "nodemonConfig": {
    "exec": "npm run start-dev",
    "ext": "js",
    "ignore": [
      "public/bundle.js"
    ]
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-google": "^0.14.0"
  }
}
